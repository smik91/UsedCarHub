{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MsSqlConnectionString": "your_connection_string_to_MsSql",
    "PostgreSqlConnectionString": "your_connection_string_to_PostgreSql"
  },
  "Jwt": {
    "Key": "your_secret_key", 
    "Issuer": "your_issuer", 
    "Audience": "your_audience",
    "ExpiresHours": "12"
  },
  "AllowedHosts": "*",
  "AuthorizationOptions": {
    "RolePermissions": [
      { "Role": "Admin", "Permission": ["Create","Read","Update","Delete"]},
      { "Role": "User", "Permission": ["Read"]}
    ]
  }
}
